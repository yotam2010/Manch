<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <ripple android:color="@color/colorButtonPressed"/>
        <shape>
            <corners android:radius="3dp"/>
            <padding android:bottom="@dimen/small_margin"
                     android:top="@dimen/small_margin"
                     android:right="@dimen/small_margin"
                     android:left="@dimen/small_margin"/>
        </shape>
    </item>
<item>
    <shape>
        <padding android:bottom="@dimen/small_margin"
                 android:top="@dimen/small_margin"
                 android:right="@dimen/small_margin"
                 android:left="@dimen/small_margin"/>
        <solid android:color="@color/colorButtonNormal"/>
        <corners android:radius="3dp"/>
    </shape>
</item>

</selector>