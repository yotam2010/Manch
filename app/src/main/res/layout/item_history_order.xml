<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_button"
        android:src="@drawable/ic_content_copy_black_24dp"
        android:id="@+id/history_item_duplicate_button"
        android:elevation="3dp"
        android:padding="@dimen/tiny_margin"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        app:cardElevation="@dimen/cardview_default_elevation"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:padding="@dimen/tiny_margin"
    android:id="@+id/history_item_linear_layout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="@dimen/tiny_margin"
        android:id="@+id/history_item_date_text"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/bodyTextSize"
        android:textStyle="bold"
        android:id="@+id/history_item_name_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/bodyTextSize"
        android:textStyle="bold"
        android:id="@+id/history_item_phone_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/bodyTextSize"
        android:textStyle="bold"
        android:id="@+id/history_item_address_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/bodyTextSize"
        android:textStyle="bold"
        android:id="@+id/history_item_price_text"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/display_products"
        android:layout_gravity="center_horizontal"
        android:id="@+id/history_item_products_button"/>
</LinearLayout>
</android.support.v7.widget.CardView>
</FrameLayout>
